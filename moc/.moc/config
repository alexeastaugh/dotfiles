# Alex Eastaugh ~/.moc/config 
# (original /usr/share/doc/moc/examples/config.example.gz)

# Show file titles (title, author, album) instead of file names?
ReadTags = yes
# Default Music directory
MusicDir = "/home/alex/Music/${USER:-music}"
StartInMusicDir = yes
# Hide file name extensions
HideFileExtension = yes
# Show file format in menu
ShowFormat = yes
# Show time played as a percentage in the time progress bar
ShowTimePercent = yes
# Theme to use (original /usr/share/moc/themes)
Theme = nightly_theme
# Enable the conversion of filenames from the local encoding to UTF-8.
FileNamesIconv = no
# Remember the playlist after exit
SavePlaylist = yes
# When using more than one client (interface) at a time
SyncPlaylist = yes
# Default Layouts 
Layout1 = playlist(50%,50%,50%,50%)
Layout2 = playlist(0,0,100%,10):directory(0,10,100%,FILL)
Layout3 = directory(0,0,50%,100%):playlist(50%,0,FILL,100%)
